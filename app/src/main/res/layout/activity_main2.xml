<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f7fa"
    android:padding="16dp">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#000000"
        android:fontFamily="sans-serif-light"/>

    <TextView
        android:id="@+id/welcomeTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QuickTranslate!"
        android:textSize="28sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcomeTextView"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"/>

    <ImageView
        android:id="@+id/iconImageView"
        android:src="@drawable/icon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcomeTextView2"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/iconImageView"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/newBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Translation"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/viewBt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Translation History"
            android:drawablePadding="10dp"
            android:padding="12dp"
            android:layout_marginTop="16dp"
            android:textAllCaps="false"/>

        <ImageView
            android:id="@+id/baseImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/base"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>
